---
import { getCollection, getEntry } from 'astro:content';
const allExperiences = await getCollection('experiences');
---

<section class="">
    <div class="box">EXPERIENCES</div>
    <div class="flex mt-4 mx-auto sm:w-1/2 w-1/2">
        <div class="flex flex-col">
            {allExperiences.map(one => (
                <div class="flex  tracking-widest">
                    <div class="flex flex-col items-center">
                        <div class="mt-2 w-2 h-2 rounded-full bg-neutral-400"></div>
                        <div class=" h-full bg-neutral-800 w-0.5"></div>
                    </div>
                    <div class="flex flex-col px-4 pb-4">
                        <div class="font-bold flex items-center gap-2 text-neutral-300 text-sm sm:text-lg font-galaxy">
                            {one.data.role}
                            <a href={one.data.url} target="_blank">
                                <svg stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4" xmlns="http://www.w3.org/2000/svg"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                            </a>
                        </div>
                        <div class="font-extralight mb-2 text-neutral-300 text-[10px] sm:text-xs">{one.data.id}</div>
                        <div class="font-extralight mb-6 text-neutral-400 text-[10px] sm:text-xs">{one.data.time}</div>
                        <div class="font-extralight text-neutral-400 font-galaxy text-[12px] sm:text-sm">{one.data.job}</div>
                    </div>
                </div>
            ))}
        </div>
    </div>
    
</section>