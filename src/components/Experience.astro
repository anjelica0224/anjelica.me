---
import { getCollection, getEntry } from 'astro:content';
const allExperiences = await getCollection('experiences');
---

<section class="">
    <hr class="line mt-4"></hr>
    <div class="box">EXPERIENCES</div>
    <div class="flex mt-4 mx-auto sm:w-1/2 w-1/2">
        <div class="flex flex-col">
            {allExperiences.map(one => (
                <div class="flex  tracking-widest">
                    <div class="flex flex-col items-center">
                        <div class="mt-2 w-2 h-2 rounded-full bg-neutral-400"></div>
                        <div class=" h-full bg-neutral-800 w-0.5"></div>
                    </div>
                    <div class="flex flex-col px-4 pb-4">
                        <div class="font-bold text-neutral-300 text-sm sm:text-lg font-modern">{one.data.role}</div>
                        <div class="font-extralight mb-2 text-neutral-300 text-[10px] sm:text-xs">{one.data.id}</div>
                        <div class="font-extralight mb-6 text-neutral-400 text-[10px] sm:text-xs">{one.data.time}</div>
                        <div class="font-extralight text-neutral-400 font-galaxy text-[12px] sm:text-sm">{one.data.job}</div>
                    </div>
                </div>
            ))}
        </div>
    </div>
    
</section>