---
import { getCollection, getEntry } from 'astro:content';
const allExperiences = await getCollection('experiences');
// console.log(allExperiences)
---

<section class="">
    <div class="box">EXPERIENCES</div>
    <div class="flex mt-4 mx-auto w-2/5 ">
        <div class="flex flex-col">
            {allExperiences.map(one => (
                <div class="flex  tracking-widest">
                    <div class="flex flex-col items-center">
                        <div class="w-2 h-2 rounded-full bg-neutral-400"></div>
                        <div class=" h-full bg-neutral-800 w-0.5"></div>
                    </div>
                    <div class="flex flex-col px-4 pb-4">
                        <div class="font-bold text-neutral-300 font-modern">{one.data.role}</div>
                        <div class="font-extralight text-neutral-500 text-xs">{one.data.id}</div>
                        <div class="font-extralight text-neutral-400 font-galaxy text-sm">{one.data.job}</div>
                    </div>
                </div>
            ))}
        </div>
    </div>
    
</section>