---
import { getCollection} from 'astro:content';
const allProjects = await getCollection('projects');
---

<section class="">
    <hr class="line mt-4"></hr>
    <div class="box">PROJECTS</div>
    <blockquote class="p-2 my-4 mb-6 b w-1/2 mx-auto">
        <p class="font-galaxy italic leading-relaxed text-neutral-300 text-sm ">
            Exploring, building and learning along the way &lt;3
        </p>
    </blockquote>
    <div class="flex flex-row flex-wrap w-3/5 mt-4 gap-4 mx-auto sm:w-1/2">
        {allProjects.map(one => (
            <a href={one.data.url} target="_blank">
                <div class="flex flex-col flex-wrap p-4 rounded-2xl w-4/5 sm:w-50 bg-neutral-900 hover:bg-neutral-800">
                <span class="font-galaxy text-neutral-300 sm:text-lg text-sm font-extrabold">{one.data.id}</span>
                <p class="mt-2 font-extralight text-neutral-300 text-xs sm:text-sm">{one.data.excerpt}</p>
                <div class="flex rounded mt-2 flex-wrap">
                    {(one.data.tech).map(label => (
                        <span class=" mt-2 text-neutral-300 text-[10px] bg-neutral-800 mr-2 p-1 rounded-sm">{label}</span>
                    ))}
                </div>
                
            </div>
            </a>
            
        ))}
    </div>
    <hr class="line mt-8 ">
</section>